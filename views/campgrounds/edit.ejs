<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center;">Edit <%=campground.name%></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT " method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="data[name]" value="<%=campground.name%>" placeholder="Campground Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="data[image]" value="<%=campground.image%>" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="data[description]" value="<%=campground.description%>" placeholder="description">
                    </div>
                <input class="ui button big basic blue" type="submit" value="Update Blog">
            </form>
            <a href="/campgrounds">Back</a>
            </div>
            
            
        </div>
    </div>
        
<% include ../partials/footer %>